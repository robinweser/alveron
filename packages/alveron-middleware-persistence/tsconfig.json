  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext"
  },
  "exclude": ["node_modules", "dist", "types"]
}
