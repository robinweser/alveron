{
  "name": "alveron",
  "version": "6.1.1",
  "description": "Elm-inspired state management for React",
  "author": "Robin Weser <contact@weser.io>",
  "license": "MIT",
  "homepage": "https://alveron.js.org",
  "repository": "https://github.com/robinweser/alveron.git",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "types": "types/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "es/**",
    "lib/**",
    "types/**"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf lib es types",
    "build": "tsc -b ./tsconfig.esm.json ./tsconfig.cjs.json ./tsconfig.types.json",
    "dev": "tsc -w",
    "prepublish": "pnpm build",
    "release": "pnpm clean && npm publish"
  },
  "keywords": [
    "state management",
    "state",
    "elm"
  ],
  "peerDependencies": {
    "react": ">16.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.14",
    "typescript": "^5.1.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2"
  }
}
